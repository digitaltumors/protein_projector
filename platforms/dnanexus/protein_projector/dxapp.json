{
  "name": "protein_projector",
  "title": "Protein Projector",
  "summary": "Runs Protein Projector from Cell Mapping Toolkit",
  "dxapi": "1.0.0",
  "version": "@@VERSION@@",
  "inputSpec": [
    {
      "name": "input_embeddings",
      "label": "Input embedding files",
      "class": "array",
      "items": {
        "class": "file",
        "patterns": ["*.tsv"] 
      },
      "optional": false,
      "help": "TSV files containing input embeddings. Should include 2 or more files."
    }
  ],
  "outputSpec": [{ "name": "results_tar", "class": "file" }],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 24
      }
    },
    "interpreter": "bash",
    "file": "src/script.sh",
    "distribution": "Ubuntu",
    "release": "24.04",
    "version": "0"
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x8"
        }
      }
    }
  }
}
